<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.ops.zf.progress.CustomProgressView android:layout_width="match_parent"
        android:layout_height="20dip"
        android:id="@+id/custom_progress_1">
    </com.ops.zf.progress.CustomProgressView>
    <com.ops.zf.progress.CustomProgressView android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_alignParentBottom="true"
        android:id="@+id/custom_progress_2"
        app:viewBackgroundColor="@color/white"
        app:progressColor="@color/ent_blue"
        app:progressBackgroundColor="@color/gray_txt"
        app:progressTextColor="@color/white"
        app:progressTextBackgroundColor="@color/ent_blue"
        app:progressOrientation="left2right"
        app:progressType="horizontal">
    </com.ops.zf.progress.CustomProgressView>

    <com.ops.zf.progress.CustomProgressView android:layout_width="20dip"
        android:layout_height="300dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/custom_progress_3"
        app:viewBackgroundColor="@color/white"
        app:progressColor="@color/ent_blue"
        app:progressBackgroundColor="@color/gray_txt"
        app:progressTextColor="@color/white"
        app:progressTextBackgroundColor="@color/ent_blue"
        app:progressOrientation="top2bottom"
        app:progressType="vertical">
    </com.ops.zf.progress.CustomProgressView>

    <com.ops.zf.progress.CustomProgressView android:layout_width="20dip"
        android:layout_height="300dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/custom_progress_4"
        app:viewBackgroundColor="@color/white"
        app:progressColor="@color/ent_blue"
        app:progressBackgroundColor="@color/gray_txt"
        app:progressTextColor="@color/white"
        app:progressTextBackgroundColor="@color/ent_blue"
        app:progressOrientation="bottom2top"
        app:progressType="vertical">
    </com.ops.zf.progress.CustomProgressView>
</RelativeLayout>
